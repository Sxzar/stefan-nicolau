{% macro curvedContainer(props) %}
<div class="bg-neutral-100 curve-section relative overflow-hidden">
    <svg
        class="absolute left-0 top-0 z-10 h-24 w-full"
        viewBox="0 0 1000 100"
        preserveAspectRatio="none"
    >
        <defs>
            <clipPath id="curveClip">
                <path
                    class="curvePath"
                    d="M0,0 Q500,200 1000,0 L1000,100 L0,100 Z"
                />
            </clipPath>
        </defs>
        <rect
            x="0"
            y="0"
            width="100%"
            height="100%"
            class="fill-stone-900 dark:fill-stone-300 dark:opacity-25"
            clip-path="url(#curveClip)"
        />
    </svg>
    <div
        class="mt-[96px] bg-stone-900 pb-[96px] dark:bg-stone-300 dark:bg-opacity-25"
    >
        {% if props.tools %}
        {% set tools = props.tools %}{% endif %} {% include props.file %}
        
    </div>
</div>

{% endmacro %}
