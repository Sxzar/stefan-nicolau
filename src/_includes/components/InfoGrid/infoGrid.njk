{% from "components/InfoGrid/infoGridCard.njk" import infoGridCard %}

<!-- Define Macro -->

{% macro infoGrid(props) %} {% set oddItems = [] %} {% set evenItems = [] %}

<!-- Get odd and even elements from props.data -->

{% for item in props.data.data %}{% if loop.index0 % 2 == 0 %} {% set oddItems =
oddItems.concat([item]) %} {% else %} {% set evenItems =
evenItems.concat([item]) %} {% endif %}{% endfor %}

<section class="relative my-10 flex gap-4">
    <div class="relative w-1/3">
        <h3 class="sticky top-6 my-10 text-4xl">
            {{ props.data.title | default('Props Title') }}
        </h3>
    </div>
    <div class="grid w-2/3 auto-rows-fr grid-cols-2 gap-6">
        {% for item in props.data.data %} {{ infoGridCard({ item: item }) }} {%
        endfor %}
    </div>
</section>

{% endmacro %}
